@{
    ViewData["Title"] = "Login";
}

<main class="flex items-center justify-center h-screen bg-gray-100">
    <form action="">
        <div class="bg-white w-96 p-6 rounded shadow-sm">
            <div class="flex items-center justify-center mb-4">
                <img src="/images/logo.jpeg" class="h-32" alt=""/>
            </div>
            <label class="text-gray-700">Email</label>
            <input type="email" class="w-full py-2 bg-gray-50 text-gray-500 px-1 outline-none mb-4"/>
            <label class="text-gray-700">Password</label>
            <input type="password" class="w-full py-2 bg-gray-50 text-gray-500 px-1 outline-none mb-4"/>
            <input type="checkbox" class="mb-4" id="remember"/>
            <label for="remember" class="text-gray-700">Prueba 2</label>
            <button type="submit" class="bg-blue-500 w-full text-gray-100 py-2 rounded hover:bg-blue-600 transition-colors">Login</button>
        </div>
    </form>
</main>
