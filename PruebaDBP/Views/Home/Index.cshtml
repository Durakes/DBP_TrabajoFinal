@{
    ViewData["Title"] = "Landing Page";
}


<main class="flex items-center justify-center h-auto bg-gray-100 py-5 lg:py-20">
    <div class="container gap-2 columns-1 md:gap-8 md:columns-2">
        <div class="col-span-1 md:col-span-4 lg:col-span-6 mx-auto px-4 mb-16 md:mb-0">
            
            <form asp-controller="Usuario" asp-action="Registro" method="post">
                <div class="relative p-0 rounded-md shadow-md bg-slate-200 w-52 h-auto sd:w-44 sd:h-auto md:w-64 md:h-auto lg:w-96 lg:h-auto md:flex md:rounded-none mx-auto">
                    <button type="submit" class="absolute text-xs top-32 right-2 w-24 md:text-sm md:top-36 md:right-2 md:w-24 lg:top-56 lg:right-8 lg:w-28 lg:text-base bg-gray-700 text-white p-2 rounded hover:bg-gray-800 text-center" value="btn" name="grabar" data-toggle="modal" data-target="#exampleModal">Registrate</button>
                    <img class="" src="/images/promocion.jpg">
                </div>
            </form>
            
        </div>
        <div class="col-span-1 md:col-span-4 lg:col-span-6 order-first lg:order-last justify-center">
    
            <div class="drop-shadow-xl rounded-md shadow-md bg-gray-800  rounded-md shadow-md bg-white w-52 h-auto sd:w-52 sd:h-auto md:w-64 md:h-auto lg:w-96 lg:h-auto md:flex md:rounded-none mx-auto">
                <!--<img class="object-fill w-44 h-auto sd:w-52 sd:h-auto md:w-96 md:h-auto md:flex md:rounded-none mx-auto" src="/images/pelicula1.jpg">-->
                <div id="carousel1" class="carousel slide relative" data-bs-ride="carousel">
                    <div class="carousel-indicators absolute right-0 bottom-0 left-0 flex justify-center p-0 mb-4">
                        <button type="button" data-bs-target="#carousel1" data-bs-slide-to="0"
                            class="active" aria-current="true" aria-label="Slide 1"></button>
                        <button type="button" data-bs-target="#carousel1" data-bs-slide-to="1"
                            aria-label="Slide 2"></button>
                        <button type="button" data-bs-target="#carousel1" data-bs-slide-to="2"
                            aria-label="Slide 3"></button>
                    </div>
                    <div class="carousel-inner relative w-full overflow-hidden">
                        <div class="carousel-item active float-left w-full">
                            <a asp-controller="Pelicula" asp-action="Index" asp-route-id="505642"><img src="https://image.tmdb.org/t/p/w500/mYpT2R7639KvKZ668uoQGS2QNFp.jpg" class="block w-full"
                                alt="Pelicula 1" /></a>
                        </div>
                        <div class="carousel-item float-left w-full">
                            <a asp-controller="Pelicula" asp-action="Index" asp-route-id="436270"><img src="https://image.tmdb.org/t/p/w500/3eQMzMd2qsZkAJbk4wekp3Crg54.jpg" class="block w-full"
                                alt="Pelicula 2" /></a>
                        </div>
                        <div class="carousel-item float-left w-full">
                            <a asp-controller="Pelicula" asp-action="Index" asp-route-id="833097"><img src="https://image.tmdb.org/t/p/w500/sXCR9cmG82NnKpKtO4LpqXqZAFR.jpg" class="block w-full"
                                alt="Pelicula 3" /></a>
                        </div>
                    </div>
                    <button
                        class="carousel-control-prev absolute top-0 bottom-0 flex items-center justify-center p-0 text-center border-0 hover:outline-none hover:no-underline focus:outline-none focus:no-underline left-0"
                        type="button" data-bs-target="#carousel1" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon inline-block bg-no-repeat" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button
                        class="carousel-control-next absolute top-0 bottom-0 flex items-center justify-center p-0 text-center border-0 hover:outline-none hover:no-underline focus:outline-none focus:no-underline right-0"
                        type="button" data-bs-target="#carousel1" data-bs-slide="next">
                        <span class="carousel-control-next-icon inline-block bg-no-repeat" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
        </div>        
    </div>
   
</main>
